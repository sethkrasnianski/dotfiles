// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "git_panel": {
    "dock": "right"
  },
  "show_edit_predictions": true,
  "agent": {
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "dock": "left",
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "project_panel": {
    "dock": "right"
  },
  "telemetry": {
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "lsp": {
    "nil": {
      "binary": {
        "path": "/home/sethkrasnianski/.nix-profile/bin/nil"
      }
    }
  }
}
